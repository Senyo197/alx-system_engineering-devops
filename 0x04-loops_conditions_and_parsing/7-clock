#!/usr/bin/env bash
# A Bash script that displays the time for 12 hours and 59 minutes
hour=0

while ((hour <= 12))
do

	min=1

	while ((min <= 59))
	do
		formatted_hour=$(printf "%02d" "$hour")
		formatted_min=$(printf "%02d" "$min")

		echo "$formatted_hour:$formatted_min"
		((min++))
	done

	((hour++))
done
